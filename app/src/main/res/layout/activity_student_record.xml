<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentRecord">

    <TextView
        android:id="@+id/studentRecord"
        android:text="@string/student_record"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/textView_heading" />
    <TextView
        android:id="@+id/year1"
        android:text="year 1"
        app:layout_constraintTop_toBottomOf="@id/studentRecord"
        style="@style/yearly_textview"
        android:onClick="year1"/>

    <TextView
        android:id="@+id/year2"
        android:text="year 2"
        app:layout_constraintTop_toBottomOf="@id/year1"
        style="@style/yearly_textview" />

    <TextView
        android:id="@+id/year3"
        android:text="year 3"
        app:layout_constraintTop_toBottomOf="@id/year2"
        style="@style/yearly_textview" />

    <TextView
        android:id="@+id/year4"
        android:text="year 4"
        app:layout_constraintTop_toBottomOf="@id/year3"
        style="@style/yearly_textview" />
    <TextView
        android:id="@+id/year5"
        android:text="year 5"
        app:layout_constraintTop_toBottomOf="@id/year4"
        style="@style/yearly_textview" />
    <TextView
        android:id="@+id/year6"
        android:text="year 6"
        app:layout_constraintTop_toBottomOf="@id/year5"
        style="@style/yearly_textview" />
    <TextView
        android:id="@+id/year7"
        android:text="year 7"
        app:layout_constraintTop_toBottomOf="@id/year6"
        style="@style/yearly_textview" />







</android.support.constraint.ConstraintLayout>